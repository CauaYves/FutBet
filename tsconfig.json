{
  "compilerOptions": {
    "baseUrl": "src", // Pode variar dependendo da sua estrutura de diretórios
    "paths": {
      "@/*": ["src/*"] // Mapeia qualquer caminho começando com "@" para a pasta "src"
    },
    "target": "es2020",
    "module": "commonjs",
    "outDir": "dist",
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "rootDirs": ["src", "tests"],
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ]
  },
  "include": ["src**/*", "tests", "prisma"]
}
